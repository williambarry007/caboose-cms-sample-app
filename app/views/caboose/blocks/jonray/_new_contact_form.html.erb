<div id='container'>
  <div id='content'>
    <div id='logo'><img src='http://d9hjv462jiw15.cloudfront.net/jonathanraylaw/logo.gif' /></div>
		<form id="contact_form">
			<input type="hidden" name="block_id" value="111628" />
			<input type="hidden" name="form_name" value="Contact Form" />
			<div class="grid-row"><input type="text" name="name"  placeholder="Your Name" /></div>
		  <div class="grid-row"><input type="text" name="email" placeholder="Email Address" /></div>
			<div class="grid-row"><input type="text" name="phone" placeholder="Phone Number" /></div>
			<div class="grid-row"><textarea name="message_required" placeholder="Message" rows="4"></textarea></div>
			<div id="message"></div>
			<div class="bottom clearfix"><a href="#" class="btn" id="submit-contact-form">Send</a></div>
		</form>		
	</div>
</div>
<script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
<script type='text/javascript'>
$(document).ready(function() {
	$("#submit-contact-form").click(function(event) {	  
		event.preventDefault();
		$.ajax({
		  url: '/admin/contact',
		  type: 'post',
		  success: function(resp) {
		    if (resp.error) $('#message').html("<p class='note error'>" + resp.error + "</p>");
		    if (resp.success) $('#contact_form').replaceWith($("<p class='note success'>Your message has been sent.</p>");		  
		  }		
		});		 
		return false;
	});
});
</script>
