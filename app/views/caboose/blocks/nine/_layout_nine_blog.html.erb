<!--[if lt IE 9]><script src="/html5shiv.js"></script><![endif]-->
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta http-equiv="content-type" content="text/html;charset=utf-8">
    <meta http-equiv="content-language" content="en">
    <meta http-equiv="content-language" content="en-gb">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% title = post ? "#{post.title} | The Nine Blog" : "The Nine | Built in the South" %>
    <title><%= title %></title>
    <meta property="og:site_name" content="The Nine"/>
    <meta name="twitter:card" content="summary">
    <% desc = page.meta_description.blank? ? "The Nine is a web development and marketing agency serving Tuscaloosa, Alabama and the surrounding area since 2005." : page.meta_description %>
    <% domain = site.primary_domain.domain %>
    <% if post %>
      <% 
        if post.preview && !post.preview.blank?
          html = Nokogiri::HTML( post.preview ) 
          text = html.at('body').inner_text
          words = text.blank? ? "" : text.split[0..30]
          preview = words.blank? ? "" : words.join(' ')
        else
          preview = desc
        end
      %>
      <meta name="description" content="<%= preview %>" />
      <meta property="og:url" content="http://<%= domain %><%= post.uri %>" />
      <meta property="og:type" content="article" />
      <meta property="og:description" content="<%= preview %>" />
      <meta property="og:image" content="<%= post.image.url(:large) %>"/>
      <meta name="twitter:description" content="<%= preview %>">
      <meta name="twitter:image" content="<%= post.image.url(:large) %>">
    <% else %>
      <meta property="og:url" content="http://<%= domain %>/<%= page.uri %>" />
      <meta property="og:description" content="<%= desc %>" />
      <meta name="description" content="<%= desc %>" />
      <meta name="twitter:description" content="<%= desc %>">
      <meta property="og:image" content="http://cabooseit.s3.amazonaws.com/assets/nine/images/screenshot2.jpg"/>
      <meta name="twitter:image" content="http://cabooseit.s3.amazonaws.com/assets/nine/images/screenshot2.jpg">
    <% end %>
    <meta property="og:title" content="<%= title %>" />
    <meta name="twitter:title" content="<%= title %>">
    <%= render :partial => "caboose/blocks/nine/icons" %>
    <%= render :partial => "caboose/blocks/nine/fonts", :locals => {:site => site} %>
    <%= raw css %>
    <%= raw csrf_meta_tags %>
    <!-- Facebook Conversion Code for conversion from fb.com -->
<script>(function() {
 var _fbq = window._fbq || (window._fbq = []);
 if (!_fbq.loaded) {
   var fbds = document.createElement('script');
   fbds.async = true;
   fbds.src = '//connect.facebook.net/en_US/fbds.js';
   var s = document.getElementsByTagName('script')[0];
   s.parentNode.insertBefore(fbds, s);
   _fbq.loaded = true;
 }
})();
window._fbq = window._fbq || [];
window._fbq.push(['track', '6009822684796', {'value':'0.00','currency':'USD'}]);
</script>
<noscript><img height="1" width="1" alt="" style="display:none" src="https://www.facebook.com/tr?ev=6009822684796&amp;cd[value]=0.00&amp;cd[currency]=USD&amp;noscript=1" /></noscript>
  </head>
  <body>
    <%= render :partial => "caboose/blocks/nine/mobile_navigation", :locals => {:editing => editing, :site => site} %>
    <div class="container" id='block_<%= block.id %>'>
      <!--[if lt IE 7]>
        <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
      <![endif]-->
      <%= raw block.render('header' , local_assigns) %>
      <%= raw block.render('content', local_assigns) %>
      <%= raw block.render('footer' , local_assigns) %>      
    </div>
  <%= raw js %>
  </body>
</html>