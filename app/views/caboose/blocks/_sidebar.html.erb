<div class="sidebar_wrapper" id='block_<%= block.id %>'>      
  <div class="sidebar">
    <% if block.children.count > 0 %>
      <% block.children.each do |b| %><%= raw block.render(b, local_assigns) %><% end %>
    <% end %>                          
    <% if editing %><%= raw block.child_block_link %><% end %>
  </div>
</div>

