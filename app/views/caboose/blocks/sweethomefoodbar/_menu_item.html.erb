<%
  classes = []
  classes << block.child_value('color')
  classes = classes.join(" ");
%>


<div class="menu-item <%= classes %>" id="block_<%= block.id %>">
  <h3 class="name"><%= block.child_value('name') %></h3>
  <div class="description">
    <%== block.child_value('description') %>
  </div>
  <h2 class="price"><%= block.child_value('price') %></h2>
</div>
