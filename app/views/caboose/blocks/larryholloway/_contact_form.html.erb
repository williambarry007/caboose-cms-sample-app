<div class="contact-form-block clearfix" id="block_<%= block.id %>">
	<div class="constrain">
		<div class="text">
			<h3 class="section-title"><%= block.child_value('title') %></h3>
			<div class="content"><%== block.child_value('description') %></div>
		</div>
		<form id="contact_form">
			<input type="hidden" name="block_id" value="<%= block.id %>" />
			<input type="hidden" name="form_name" value="Contact Form" />
			<div class="grid-row">
				<div class="unit1of2" style="padding-right:2%;">
					<label for="name">Name:</label>
					<input type="text" name="name">
				</div>
				<div class="unit1of2" style="padding-left:2%;">
					<label for="phone">Phone:</label>
					<input type="text" name="phone">
				</div>
			</div>
			<input type="hidden" name="subject" value="Empty">
			<div class="grid-row">
				<div class="unit1of1">
					<label for="email_required">Email Address:</label>
					<input type="email" name="email_required">
				</div>
			</div>
			<div class="grid-row">
				<div class="unit1of1">
					<label for="message_required">Message:</label>
					<textarea name="message_required" rows="4"></textarea>
				</div>
			</div>
			<% if block.child_value('show_captcha') && block.child_value('show_captcha') == "Yes" %>
				<div class="recaptcha clearfix">
					<div style="margin:10px 0;" class="g-recaptcha clearfix" data-sitekey="6LcOOQATAAAAAK0PVSzlqmm0X_RggYhM7GMuot4X"></div>
				</div>
			<% end %>
			<div class="bottom clearfix">
				<a href="#" class="btn" id="submit-contact-form">Send</a>
			</div>
		</form>
		<div id="message"></div>
	</div>
</div>

<% content_for :css do %>
	<style>
		.g-recaptcha > div > div {
			float: right;
		}
	</style>
<% end %>

<% content_for :js do %>
	<script src="https://www.google.com/recaptcha/api.js" async defer></script>
	<%= javascript_include_tag "form_submit" %>
	<script>
		$(document).ready(function() {
			$("#submit-contact-form").click(function(event) {
				event.preventDefault();
				submit_form("contact_form"); 
				return false;
			});
		});
	</script>
<% end %>