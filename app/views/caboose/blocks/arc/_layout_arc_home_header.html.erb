  <div class="constrain">
    <div class="row clearfix">
      <div class="logo">
        <img src="//d9hjv462jiw15.cloudfront.net/assets/arc/images/nav_logo.png" alt="The Arc of Tuscaloosa County" />
      </div>
      <nav>
        <a id="close-nav" class="icon-close"></a>
        <ul>
          <li><a href="/">home</a></li>
          <% Caboose::Page.where(:parent_id => 472, :hide => false).order(:sort_order).all.each do |p| %>
