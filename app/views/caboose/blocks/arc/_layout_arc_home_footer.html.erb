<footer class="basic" id="block_<%= block.id %>">
  <div class="constrain">
    <div class="grid-row">
      <div class="unit1of3">
        <nav>
          <ul>
            <li><a href="/">Home</a></li>
            <% Caboose::Page.where(:parent_id => 472, :hide => false).order(:sort_order).all.each do |p| %>
              <li><%== ApplicationHelper.nav_link(p, editing) %></li>
            <% end %>
          </ul>
        </nav>
      </div>
      <div class="unit1of3" style="text-align:center;">
        <a href="http://www.unitedway.org/" target="_blank" title="United Way">
          <img src="//d9hjv462jiw15.cloudfront.net/assets/arc/images/united.jpg" alt="Live United" width="120" />
        </a>
        <section class="nine">
          <span>Designed and loved by:</span>
          <a href="http://www.nine.is" target="_blank"><img src="//d9hjv462jiw15.cloudfront.net/assets/shared/nine_logo.png" alt="The Nine"></a>
        </section>
      </div>
      <div class="unit1of3">
        <section class="contact">
          <img src="//d9hjv462jiw15.cloudfront.net/assets/arc/images/footer_logo.png" alt="The Arc of Tuscaloosa County" />
          <div class="contact-content">
            <%== block.child_value('contact_info') %>
          </div>
        </section>
      </div>
    </div>
  </div>
</footer>