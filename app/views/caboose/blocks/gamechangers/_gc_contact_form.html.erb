<div class="gc-contact-form-block clearfix" id="block_<%= block.id %>">
	<div class="constrain">
		<div class="text">
			<h3 class="section-title"><%= block.child_value('title') %></h3>
			<div class="content"><%== block.child_value('description') %></div>
		</div>
		<form id="contact_form">
			<input type="hidden" name="block_id" value="<%= block.id %>" />
			<input type="hidden" name="form_name" value="Contact Form" />
			<div class="grid-row">
				<div class="unit1of2" style="padding-right:1%;">
					<input type="text" name="first" placeholder="Your First Name">
				</div>
				<div class="unit1of2" style="padding-left:1%;">
					<input type="text" name="last" placeholder="Your Last Name">
				</div>
			</div>
			<div class="grid-row">
				<div class="unit1of3" style="padding-right:1%;padding-top:2%;">
					<input type="email" name="email_required" placeholder="Email Address">
				</div>
				<div class="unit1of3" style="padding-left:1%;padding-right:1%;padding-top:2%;">
					<input type="text" name="phone_required" placeholder="Phone Number">
				</div>
				<div class="unit1of3" style="padding-left:1%;padding-top:2%;">
					<input type="text" name="business_team_name" placeholder="Business/Team Name">
				</div>
			</div>
			<div class="grid-row">
				<div class="unit1of1">
					<div class="field">
						<label for="hear_about_us" style="float:left;margin-top:10px;color:white;">How did you hear about us?</label>
						<select id="hear_about_us" name="hear_about_us">
							<option value="Current GCP Member">Current GCP Member</option>
							<option value="Flyer/Sign">Flyer/Sign</option>
							<option value="Internet">Internet</option>
							<option value="Newspaper">Newspaper</option>
							<option value="Radio">Radio</option>
							<option value="Other">Other</option>
						</select>
					</div>
				</div>
			</div>
			<div class="grid-row">
				<div class="unit1of1">
					<textarea name="message_required" placeholder="Message" rows="4"></textarea>
				</div>
			</div>
			<% if block.child_value('show_captcha') && block.child_value('show_captcha') == "Yes" %>
				<div class="recaptcha clearfix">
					<div style="margin:10px 0;" class="g-recaptcha clearfix" data-sitekey="6LcOOQATAAAAAK0PVSzlqmm0X_RggYhM7GMuot4X"></div>
				</div>
			<% end %>
			<div class="bottom clearfix">
				<a href="#" class="btn" id="submit-contact-form">Send</a>
			</div>
		</form>
		<div id="message"></div>
	</div>
</div>

<% content_for :css do %>
	<style>
		.recaptcha > div > div {
			float: right;
		}
	</style>
<% end %>

<% content_for :js do %>
	<script src="https://www.google.com/recaptcha/api.js" async defer></script>
	<%= javascript_include_tag "form_submit" %>
	<script>
		$(document).ready(function() {
			$("#submit-contact-form").click(function(event) {
				event.preventDefault();
				submit_form("contact_form"); 
				return false;
			});
		});
	</script>
<% end %>