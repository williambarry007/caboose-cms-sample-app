<div class="staff-block clearfix" id="block_<%= block.id %>">
	<div class="image-wrapper">
		<% img = block.child_value('image') %>
		<% if img && img.url && !img.url.include?('placehold') %>
			<div class="image-holder" style="background-image:url(<%= img.url(:large) %>);">
				
			</div>
		<% end %>
	</div>
	<div class="text-wrapper">
		<h3 class="name"><%= block.child_value('name') %></h3>
		<h5 class="title"><%= block.child_value('title') %></h5>
		<div class="richtext bio">
			<%== block.child_value('bio') %>
		</div>
	</div>
</div>