<div id="block_<%= block.id %>">
  <div class="contact-form">
    <div class="constrain">
      <div class="grid-row">
        <div class="unit unit1of3">
          <h1 class="contact-title">Get in Touch</h1>
          <% if !block.child_value('mailing_address').blank? %>
            <p class="green title">Address:</p>
            <%== block.child_value('mailing_address') %>
          <% end %>
          <% if !block.child_value('general_email').blank? %>
            <p class="orange title">General Email:</p>
            <p class="text"><a href="mailto:<%= block.child_value('general_email') %>"><%= block.child_value('general_email') %></a></p>
          <% end %>
          <% if !block.child_value('event_email').blank? %>
            <p class="orange title">Event Email:</p>
            <p class="text"><a href="mailto:<%= block.child_value('event_email') %>"><%= block.child_value('event_email') %></a></p>
          <% end %>
          <% if !block.child_value('market_email').blank? %>
            <p class="orange title">Market Email:</p>
            <p class="text"><a href="mailto:<%= block.child_value('market_email') %>"><%= block.child_value('market_email') %></a></p>
          <% end %>
          <% if !block.child_value('phone').blank? %>
            <p class="yellow title">Phone:</p>
            <p class="text"><%= block.child_value('phone') %></p>
          <% end %>
          <% if !block.child_value('person').blank? %>
            <p class="text"><%= block.child_value('person') %></p>
          <% end %>
        </div>
        <div class="unit unit2of3">
          <form id="contact_form">
            <input type="hidden" value="Contact Form" name="form_name">
            <input type="hidden" value="<%= block.id %>" name="block_id">
            <div class="form-wrapper">
              <div class="grid-row">
                <div class="unit unit1of2"><input type="text" name="name_required" placeholder="Name:" class="required"></div>
                <div class="unit unit1of2"><input type="email" name="email_required" placeholder="Email:" class="required"></div>
              </div>
              <div class="grid-row">
                <div class="unit unit1of2"><input type="text" name="phone" placeholder="Phone:"></div>
                <div class="unit unit1of2"></div>
              </div>
              <textarea name="message_required" rows="6" placeholder="Message:" class="required"></textarea>
            </div>
            <br />
            <a href="#" class="green btn" id="send_contact">Send Us A Message</a>
            <br />
          </form>
          <div id="message"></div>
        </div>
      </div>
    </div>
  </div>

  <% content_for :js do %>
    <%= javascript_include_tag "form_submit" %> 

    <script>
      $(document).ready(function() {
        $('#send_contact').click(function(e) {
          e.preventDefault();
          submit_form("contact_form");
          return false;
        });
      });
    </script>
  <% end %>

</div>