<%
bg = block.child_value('banner_image')
img_url = bg && bg.url && !bg.url.include?("placehold") ? bg.url(:huge) : '//d9hjv462jiw15.cloudfront.net/assets/radiology/images/running.jpg'
meta = block.child_value('meta').blank? ? "Now Offering" : block.child_value('meta')
title = block.child_value('title').blank? ? "Life Insurance for Everyone" : block.child_value('title')
button_url = block.child_value('button_url').blank? ? "#" : block.child_value('button_url')
button_text = block.child_value('button_text').blank? ? "Learn More" : block.child_value('button_text')
%>

<div class="header-wrapper" id="block_<%= block.id %>">
  <div class="banner clearfix">
   <!--  <div class="constrain"> -->
      <div class="logo-wrapper">
        <div class="white">
          <img src="<%= asset_path 'tcu/images/logo.png' %>" alt="<%= site.description %>" width="180" height="60" />
          <div class="triangle"></div>
        </div>
      </div>
      <div class="text-wrapper">
        <h2 class="title">The One Place For:</h2>
        <div class="line"></div>
        <h1 class="subtitle">Protecting Your Family</h1>
        <div class="line"></div>
      </div>
<!--     </div> -->
  </div>
  <div class="header" style="background-image:url(<%= img_url %>);">
    <div class="constrain">
      <a class="logo-link" href="/" title="<%= site.description %>">
        <img src="<%= asset_path 'tcu/images/logo.png' %>" alt="<%= site.description %>" width="180" height="60" />
      </a>
      <div class="text-wrapper">
        <h5 class="meta"><%= meta %></h5>
        <h3 class="title"><%= title %></h3>
        <a href="<%= button_url %>" class="btn white-outline"><%= button_text %></a>
      </div>
    </div>
    <div class="fade"></div>
  </div>
</div>
