<header class="main subpage" id="block_<%= block.id %>">
  <div class="header-overlay conceal"></div>
  <div class="constrain">
    <a href="/" class="logo-link" title="Home">
      <img src="//d9hjv462jiw15.cloudfront.net/assets/usblades/images/main_logo.png" alt="U.S. Blades" width="250" />
    </a>
    <div class="header-text table">
      <div class="table-cell">
        <h2 class="title"><%= block.child_value('section_title') %></h2>
        <div class="line"></div>
        <div class="richtext"><%== block.child_value('main_text') %></div>
      </div>
    </div>
    <a id="menu-icon" class="cmn-toggle-switch cmn-toggle-switch__htx conceal" href="#mmenu" title="Menu">
      <span>toggle menu</span>
    </a>
  </div>
  <nav class="reveal nav">
    <ul>
      <li><a class="local" href="#block_43246" title="GRINDING ROOM SUPPLIES">GRINDING ROOM SUPPLIES</a></li>
      <li><a class="local" href="#block_43387" title="KNIVES">KNIVES</a></li>
      <li><a class="local" href="#block_43387" title="MACHINE PARTS">MACHINE PARTS</a></li>
      <li><a class="local" href="#block_43535" title="SAWS">SAWS</a></li>
      <li><a class="local" href="#block_43535" title="EQUIPMENT">EQUIPMENT</a></li>
    </ul>
    <span class="icon-down-big"></span>
  </nav>
</header>

<% content_for :js do %>
  <script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"></script>
  <script>
    if ( !$("html").hasClass("lt-ie9") ) {
      $(function() {
        var BV = new $.BigVideo({useFlashForFirefox:false});
        BV.init();
        if (Modernizr.touch) {
          BV.show('http://d9hjv462jiw15.cloudfront.net/assets/usblades/images/spinning_video.jpg');
        } 
        else {
          BV.show([
            { type: "video/mp4",  src: "http://cabooseit.s3.amazonaws.com/assets/usblades/images/<%= block.child_value('video_path') %>.mp4" },
            { type: "video/webm", src: "http://cabooseit.s3.amazonaws.com/assets/usblades/images/<%= block.child_value('video_path') %>.webm"}
          ],{ambient:true,doLoop:true});
        }
      });
      $(document).ready(function() {
        if ( Modernizr.touch ) {
          var height = $("header.main.subpage").outerHeight();
          $("header.main.subpage").css("height", height);
        }
      });
    }
  </script>
<% end %>