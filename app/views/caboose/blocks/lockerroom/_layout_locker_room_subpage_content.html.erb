<div class="content_wrapper" id='block_<%= block.id %>'>          
  <div class="subpage-content content_body <% if page.slug == 'my-account' %>full<% end %>"> 
	  <div class="constrain">
	  	<div class="subpage-left">				
				<img src="//d9hjv462jiw15.cloudfront.net/media/5458_lockerroom_crest_original.jpg" alt="Over 50 Years" />
	  	</div>
			<div class="text-wrapper">
				<% if controller_view_content && controller_view_content.strip.length > 0 %>    
		      <%= raw controller_view_content %>
		    <% elsif post && post.body %>
		      <%= raw block.partial('post', local_assigns) %>
		    <% elsif block.children.count > 0 %>
		      <% block.children.each do |b| %><%= raw block.render(b, local_assigns) %><% end %>
		    <% end %>
			</div>
  	</div>
  </div>
</div>