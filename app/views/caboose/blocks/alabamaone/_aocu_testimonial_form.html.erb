<div class="contact-form-block clearfix" id="block_<%= block.id %>">
	<div class="constrain">
		<form id="testimonial_form">
			<input type="hidden" name="block_id" value="<%= block.id %>" />
			<input type="hidden" name="form_name" value="Testimonial Form" />
			<div class="grid-row">
				<div class="unit1of3" style="padding-right:2%;">
					<input type="text" name="name" placeholder="Your Name" />
				</div>
				<div class="unit1of3" style="padding-left:1%;padding-right:1%;">
					<input type="email" name="email_required" placeholder="Email Address" />
				</div>
				<div class="unit1of3" style="padding-left:2%;">
					<input type="text" name="phone" placeholder="Phone" />
				</div>
			</div>
			<input type="hidden" name="subject" placeholder="Subject" value="AOCU Testimonial" />
			<div class="grid-row bottom">
				<div class="unit1of3" style="padding-right:2%;">
					<input type="text" name="branch" placeholder="Branch" />
				</div>
				<div class="unit2of3" style="padding-left:1%;">
					<textarea name="testimonial_required" placeholder="Your Testimonial" rows="4"></textarea>
				</div>
			</div>
			<div class="recaptcha clearfix">
				<div style="margin:10px 0;" class="g-recaptcha clearfix" data-sitekey="6LcOOQATAAAAAK0PVSzlqmm0X_RggYhM7GMuot4X"></div>
				<div class="disclaimer" style="text-align:right;font-size:13px;margin:10px 0;"><%== block.child_value('disclaimer') %></div>
			</div>
			<div class="bottom clearfix">
				<a href="#" class="btn" id="submit-testimonial-form">Send Testimonial</a>
			</div>
		</form>
		<div id="message"></div>
	</div>
</div>

<% content_for :css do %>
	<style>
		.recaptcha > div > div {
			float: right;
		}
	</style>
<% end %>

<% content_for :js do %>
	<script src="https://www.google.com/recaptcha/api.js" async defer></script>
	<%= javascript_include_tag "form_submit" %>
	<script>
		$(document).ready(function() {
			$("#submit-testimonial-form").click(function(event) {
				event.preventDefault();
				submit_form("testimonial_form"); 
				return false;
			});
		});
	</script>
<% end %>