<%
img = block.child_value('background_image') ? block.child_value('background_image').url(:huge) : ''
img_url = img.blank? || img.include?('placehold') ? '//d9hjv462jiw15.cloudfront.net/assets/scottiejones/images/header_background.jpg' : img
%>

<header class="main subpage" id="block_<%= block.id %>" style="background-image:url(<%= img_url %>);">
  <div class="header-overlay"></div>
  <div class="constrain">
    <!-- <a class="logo-link" href="/" title="<%= site.description %>">
      <img src="<%= site.logo.url(:large) %>" alt="<%= site.description %>" />
    </a> -->
    <nav class="reveal">
      <ul>
        <li><a href="/" title="Home">Home</a></li>
        <% Caboose::Page.where(:parent_id => 1666, :hide => false).order(:sort_order).all.each do |p| %>
          <li><%== ApplicationHelper.nav_link(p, editing, false) %></li>
        <% end %>
      </ul>
    </nav>
    <hr>
    <p>SCOTTIE JONES<span>PHOTOGRAPHY</span></p>
    <a id="menu-icon" class="cmn-toggle-switch cmn-toggle-switch__htx conceal" href="#mmenu" title="Menu">
      <span>toggle menu</span>
    </a>
  </div>
</header>

<% content_for :css do %>
<style type="text/css">
  header.main {
    position: relative;
    padding-top: 16px;
  }
  .header-overlay {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(10,10,10,0.5);
  }
</style>
<% end %>